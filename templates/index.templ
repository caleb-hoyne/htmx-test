package templates

import "github.com/caleb-hoyne/htmx-test/types"

templ Page(movies []types.Movie) {
    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8"/>
            <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <title>HTMX & Go - Demo</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous"/>
            <script src="https://unpkg.com/htmx.org@1.9.8" integrity="sha384-rgjA7mptc2ETQqXoYC3/zJvkU7K/aP44Y+z7xQuJiVnB/422P/Ak+F/AqFR7E4Wr" crossorigin="anonymous"></script>
        </head>
        <body class="container">

        <div class="row mt-4 g-4">
            @Movies(movies)
            @Form()
        </div>

        </body>
    </html>
}

templ Form() {
    <div class="col-4">
    <form hx-post="/films" hx-target="#film-list" hx-swap="outerHTML" hx-indicator="#spinner" hx-on::after-request="this.reset()">
        <h1 class="mb-4">Add Film</h1>
        <div class="mb-2">
            <label for="film-name">Name</label>
            <input type="text" name="name" id="film-name" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="film-director">Director</label>
            <input type="text" name="director" id="film-director" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            <span class="spinner-border spinner-border-sm htmx-indicator" id="spinner" role="status" aria-hidden="true"></span>
            Submit
        </button>
    </form>
    </div>

}

templ Movies(movies []types.Movie) {
  <div class="col-8" id="film-list">

      <h1>Movies</h1>
      <ul class="list-group fs-5 me-5">

      for _, m := range movies {
         <li class="list-group-item bg-primary text-white">{ m.Name } - { m.Director }</li>
      }
      </ul>
  </div>

}